<% /* views/vendor/newItem.ejs */ %>
<% title = 'Add New Item' %>

<h1>Add New Item</h1>

<% if (error) { %>
  <p style="color:red;"><%= error %></p>
<% } %>

<form action="/vendor/items/new" method="POST" enctype="multipart/form-data">
  <div>
    <label for="name">Name</label><br/>
    <input id="name" name="name" type="text" required />
  </div>
  <div>
    <label for="description">Description</label><br/>
    <textarea id="description" name="description"></textarea>
  </div>
  <div>
    <label for="price">Price (e.g. 9.99)</label><br/>
    <input id="price" name="price" type="number" step="0.01" required />
  </div>
  <div>
    <label for="image">Image Upload</label><br/>
    <input id="image" name="image" type="file" accept="image/*" />
  </div>
  <div>
    <label for="imageUrl">—or Image URL</label><br/>
    <input id="imageUrl" name="imageUrl" type="url" placeholder="https://..." />
  </div>
  <button type="submit">Create Item</button>
</form>

<p><a href="/vendor/items">← Back to Menu</a></p>
